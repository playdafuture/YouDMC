<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/avatar_none"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/unset_avatar_ic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:padding="4dp"
        android:background="@drawable/avatar_selected_background"/>
    <ImageView
        android:id="@+id/avatar_one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/unset_avatar_ic"
        android:layout_toRightOf="@id/avatar_none"
        android:layout_toEndOf="@id/avatar_none"
        android:scaleType="fitXY"
        android:padding="4dp"/>
    <ImageView
        android:id="@+id/avatar_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/unset_avatar_ic"
        android:layout_toRightOf="@id/avatar_one"
        android:layout_toEndOf="@id/avatar_one"
        android:scaleType="fitXY"
        android:padding="4dp"/>
    <ImageView
        android:id="@+id/avatar_three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/unset_avatar_ic"
        android:layout_below="@id/avatar_none"
        android:scaleType="fitXY"
        android:padding="4dp"/>
    <ImageView
        android:id="@+id/avatar_four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/unset_avatar_ic"
        android:layout_toRightOf="@id/avatar_three"
        android:layout_toEndOf="@id/avatar_three"
        android:layout_below="@id/avatar_one"
        android:scaleType="fitXY"
        android:padding="4dp"/>
    <Button
        android:id="@+id/submit_avatar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_avatar"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@id/avatar_four"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>