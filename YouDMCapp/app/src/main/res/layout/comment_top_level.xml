<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="CowKiller1337"/>
    <TextView
        android:id="@+id/timestamp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 days ago"/>
    <TextView
        android:id="@+id/body"
        android:layout_below="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marcus_aerelius_quote"/>

    <Button
        android:id="@+id/reply_button"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_toRightOf="@id/view_replies_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body"
        android:text="@string/reply"/>
    <Button
        android:id="@+id/view_replies_button"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_replies"
        />
</RelativeLayout>